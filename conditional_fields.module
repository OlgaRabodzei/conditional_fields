  'touched'    => t('Touched'),
  'untouched'  => t('Untouched'),
  'filled'     => t('Filled'),
  'empty'      => t('Empty'),
  'readwrite'  => t('Read/Write'),
  'readonly'   => t('Read Only'),
  */

  // Allow other modules to modify the conditions
  drupal_alter('conditional_fields_conditions', $conditions);

  return $conditions;
